# Twitter account credentials for twscrape
TWITTER_USERNAME=your_twitter_username
TWITTER_PASSWORD=your_twitter_password
TWITTER_EMAIL=your_email@example.com
TWITTER_EMAIL_PASSWORD=your_email_password

# Twitter cookies for authentication (recommended method)
# Get these from browser Developer Tools -> Application -> Cookies -> x.com
AUTH_TOKEN=your_auth_token_here
CT0=your_ct0_token_here

# Telegram Bot Configuration
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
# Optional: Comma-separated list of authorized user IDs (leave empty to allow all users)
TELEGRAM_AUTHORIZED_USERS=your_user_id_here

# Storage Configuration
# Options: 'local', 'server', 'both' (default: 'both')
ENVIRONMENT=both
# Local storage path (relative to the script location)
LOCAL_STORAGE_PATH=../scraped_data
# Server storage path (absolute path)
SERVER_STORAGE_PATH=/home/ubuntu/social-media-archive-project/scraped_data

# Instagram Configuration
# Choose your preferred authentication method

# Method 1: Username/Password (will save session file)
INSTAGRAM_USERNAME=codyorourke26
INSTAGRAM_PASSWORD=CVCRMg12!@

# Method 2: Session file path (if you have an existing session)
INSTAGRAM_SESSION_FILE=/path/to/session/file

# Method 3: Cookies (JSON format)
# Export from browser: Developer Tools > Application > Cookies > instagram.com
# Format: {"sessionid": "value", "csrftoken": "value", "ds_user_id": "value"}
INSTAGRAM_COOKIES={"sessionid": "your_session_id", "csrftoken": "your_csrf_token"}

# Method 4: Cookies file (JSON array format from browser export)
INSTAGRAM_COOKIES_FILE=/path/to/cookies.json

# Two-factor authentication code (if required)
INSTAGRAM_2FA_CODE=123456

# Instagram RapidAPI Configuration
RAPIDAPI_KEY=your_rapidapi_key_here
INSTAGRAM_RAPIDAPI_HOST=instagram-scrapper-posts-reels-stories-downloader.p.rapidapi.com
